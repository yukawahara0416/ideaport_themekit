<h2 class="Idea-PageTitle">
  <a href="{{ blogs['news'].url }}">{{ blogs['news'].title }}</a>
</h2>

{%- paginate blog.articles by 6 -%}
  {%- for article in blog.articles -%}
  <div id="NewsEntries">
    <article>
      <div class="NewsDate">{{ article.created_at | date: "%Y.%m.%d" }}</div>
      {%- if blog.tags -%}
        <div class="NewsCate InLink">
          {%- for tag in article.tags -%}
          <a class="{{ tag | escape }}">{{ tag | escape }}</a>
          <span>&nbsp;</span>
          {%- endfor -%}
        </div>
      {%- endif -%}
      <h3>{{ article.title | escape }}</h3>
      <a href="{{ article.url }}" class="HoverBox" title="{{ article.title | escape }}"></a>
    </article>
    {%- endfor -%}
  </div>

  {%- if paginate.pages > 1 -%}
    {%- render 'pagination', paginate: paginate -%}
  {%- endif -%}
{%- endpaginate -%}

