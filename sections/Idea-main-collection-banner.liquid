  <!-- TB1080px以上なら表示 -->
  <img class="lazyload" data-aspectratio="1" src="data:image/gif;base64,R0lGODlhAQABAGAAACH5BAEKAP8ALAAAAAABAAEAAAgEAP8FBAA7" srcset="{{ collection.metafields.my_fields.brand_image_sp | file_url }}" alt="{{ collection.title | escape }}">
